<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculatorMobileApp.BMIResult"
             Title="BMIResult">
    <ScrollView>
        <VerticalStackLayout Spacing="50" Margin="20">
        <Label 
        Text="BMI Result:"
        FontSize="Large"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <Frame HorizontalOptions="Center"
           Padding="50"
           HasShadow="True"
           BorderColor="AntiqueWhite"
           >
            <VerticalStackLayout Spacing="10">
                <Label x:Name="LblGender" HorizontalOptions="Center" FontSize="20"/>
                <Label x:Name="LblBMI" HorizontalOptions="Center" FontSize="20"/>
                <Label x:Name="LblHealthStatus" HorizontalOptions="Center" FontSize="20"/>
                <Button Text="Recommendations" Clicked="Button_Clicked"/>
            </VerticalStackLayout>
        </Frame>
        <Button Text="Back to main page" Clicked="Button_Clicked_1" HorizontalOptions="Center"></Button>
    </VerticalStackLayout>
    </ScrollView>

</ContentPage>